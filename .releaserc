{
    "branches": [
        "+([0-9])?(.{+([0-9]),x}).x",
        "main",
        "master",
        "next",
        "next-major",
        {
            "name": "beta",
            "prerelease": true
        },
        {
            "name": "alpha",
            "prerelease": true
        }
    ],
    "plugins": [
        "@semantic-release/commit-analyzer",
        "@semantic-release/release-notes-generator",
        [
            "@semantic-release/exec",
            {
                "publishCmd": "yarn version ${nextRelease.version} && yarn build:clean"
            }
        ],
        [
            "@semantic-release/github",
            {
                "assets": [
                    {
                        "path": [
                            "dist/*.js",
                            "!dist/*.meta.js"
                        ],
                        "label": "User Script file"
                    },
                    {
                        "path": "dist/*.meta.js",
                        "label": "Metadata file for updating"
                    }
                ]
            }
        ]
    ]
}